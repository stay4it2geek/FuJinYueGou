<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <com.act.quzhibo.view.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight" />

    <RelativeLayout
        android:id="@+id/modifyPSWlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/modifyPSW_img"
            android:layout_width="28dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/password" />

        <TextView
            android:id="@+id/modifyPSW_txt"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/modifyPSW_img"
            android:paddingTop="3dp"
            android:text="重置密码" />

        <View
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/rightarr" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/openSecret_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/yinsi" />

        <TextView
            android:id="@+id/openSecret_txt"
            style="@style/textStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/openSecret_img"
            android:gravity="center_vertical"
            android:paddingTop="3dp"
            android:text="是否开启私密模式" />

        <Switch
            android:id="@+id/openSecret_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <TextView
            android:id="@+id/sex_txt"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="3dp"
            android:text="设置性别，设置后无法更改" />

        <RelativeLayout
            android:id="@+id/sex_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinner" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <TextView
            android:id="@+id/age_txt"
            style="@style/textStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical|left"
            android:text="设置年龄" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <TextView
            android:id="@+id/arealocation_txt"
            style="@style/textStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="设置省份城市" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner" />
    </RelativeLayout>


</LinearLayout>