<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.act.quzhibo.widget.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout"
        android:layout_marginBottom="@dimen/commonViewHeight">

        <com.act.quzhibo.widget.SlidingDetailsLayout
            android:id="@+id/slidingDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.act.quzhibo.widget.PageOneScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/courseBannerLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titlebar">

                        <com.youth.banner.Banner
                            android:id="@+id/courseBanner"
                            android:layout_width="match_parent"
                            android:layout_height="280dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/courseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/courseBannerLayout"
                        android:layout_margin="10dp"
                        android:text="fdsafdsfadsfdsfadsfadsfdasfdsfadsfadsfdsfadsfadsfdasfdasfdsfdsfdsafadsfadsfadsfdsafdasfadsfdsafdsafdsfdsfdsfadsfdsfadsfdsafdsfdsf" />

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/courseAppPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="$2345.54"
                            android:textColor="@color/darkorange"
                            android:textSize="16sp" />

                        <TextView

                            android:id="@+id/courseMarketPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/courseAppPrice"
                            android:text="$2345.54"
                            android:textColor="@color/light_gray"
                            android:textSize="13sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ddd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/courseAppPrice">

                        <TextView
                            android:id="@+id/dimond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="钻石："
                            android:textColor="@color/darkorange"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/dimond"
                            android:layout_toRightOf="@+id/dimond"
                            android:text="可得钻石200颗" />

                    </RelativeLayout>

                </LinearLayout>
            </com.act.quzhibo.widget.PageOneScrollView>

            <TextView
                android:id="@+id/tishi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray"
                android:gravity="center"
                android:text="上拉查看商品详情" />


            <com.act.quzhibo.widget.PageTwoWebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </com.act.quzhibo.widget.SlidingDetailsLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/shopping_cart_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/middlegray"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_shop"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/shopping_cart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:text="购物车"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/courseCount"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="right|top"
                    android:layout_margin="3dp"
                    android:background="@mipmap/msg_tips"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </FrameLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/darkgray" />

            <LinearLayout
                android:id="@+id/service_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/middlegray"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_service"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:src="@drawable/service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="客服"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/darkgray" />


            <TextView
                android:id="@+id/text_add"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:background="@color/lightorange"
                android:gravity="center"
                android:orientation="vertical"
                android:text="加入购物车"
                android:textColor="@android:color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/text_buynow"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.6"
                android:background="@color/red"
                android:gravity="center"
                android:orientation="vertical"
                android:text="立即购买"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>







