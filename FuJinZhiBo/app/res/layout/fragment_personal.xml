<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/commonColor">

                <FrameLayout
                    android:id="@+id/avaterlayout"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp">

                    <com.act.quzhibo.custom.CircleImageView
                        android:id="@+id/circle_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/man" />

                    <TextView
                        android:id="@+id/uploadImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="请上传头像"
                        android:textColor="@color/white" />
                </FrameLayout>

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/avaterlayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/avaterlayout"
                    android:layout_toRightOf="@+id/avaterlayout"
                    android:maxEms="20"
                    android:maxLength="20"
                    android:text="昵称"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sexAndAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/nickName"
                    android:layout_below="@+id/nickName"
                    android:layout_marginTop="17dp"
                    android:text="年龄/性别"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/vipLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/avaterlayout"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/sexAndAge"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/darkred"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/vip_levelimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/sexAndAge"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/sexAndAge"
                    android:layout_marginRight="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content">




                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <RelativeLayout
                    android:id="@+id/checkoutMoneyLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/checkoutMoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:textColor="#424242"
                        android:gravity="center_horizontal"
                        android:text="申请余额提现"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkoutMoney"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentBottom="true"
                        android:maxLength="40"
                        android:gravity="center_horizontal|bottom"
                        android:text="您有4000元未提现"
                        android:textColor="@color/darkorange"
                        android:textSize="11sp" />
                </RelativeLayout>


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <RelativeLayout
                    android:paddingBottom="5dp"
                    android:id="@+id/getQuCoinsLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/getCoins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:textColor="#424242"
                        android:gravity="center_horizontal"
                        android:text="签到领取趣币"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/vip_coins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/getCoins"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentBottom="true"
                        android:maxLength="40"
                        android:gravity="center_horizontal|bottom"
                        android:text="您有1232趣币"
                        android:textColor="@color/darkorange"
                        android:textSize="11sp" />
                </RelativeLayout>


            </LinearLayout>



            <RelativeLayout
                android:id="@+id/makemoneyLayoout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="6dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/referee_img"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/sharemoney" />

                <TextView
                    android:id="@+id/refereetext"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/referee_img"
                    android:paddingTop="5dp"
                    android:textColor="@color/red_light"
                    android:text="分享推荐领佣金" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/get_vip"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:background="#fff">

                <ImageView
                    android:id="@+id/orderstatus"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/getvip" />

                <TextView
                    android:id="@+id/orderstext"
                    style="@style/textStyle"
                    android:textColor="@color/red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/orderstatus"
                    android:paddingTop="5dp"
                    android:text="获取趣会员特权" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vip_order_listlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/orderslist_img"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/orderlist" />

                <TextView
                    android:id="@+id/orderstatustext"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/orderslist_img"
                    android:paddingTop="5dp"
                    android:text="已购买的清单" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/myfocus_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/focus_person_img"
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/qingqu" />

                <TextView
                    android:id="@+id/focus_person_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/focus_person_img"
                    android:paddingTop="3dp"
                    android:text="我关注的达人" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfocus_shower"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/focusimg"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/focus_shower" />

                <TextView
                    android:id="@+id/focusshower"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/focusimg"
                    android:paddingTop="3dp"
                    android:text="我关注的主播" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/who_see_me"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/whoseeimage"
                    android:layout_width="24dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/ganxingqu" />

                <TextView
                    android:id="@+id/whoseenum"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/whoseeimage"
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:text="谁对我感兴趣" />

                <com.act.quzhibo.custom.HorizontialListView
                    android:id="@+id/who_see_me_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/whoseenum" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/myVideo_download_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/myVideo_download_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/downvideo" />

                <TextView
                    android:id="@+id/myVideo_download_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/myVideo_download_img"
                    android:paddingTop="5dp"
                    android:text="离线下载的视频" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myIMG_download_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/myIMG_download_img"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/tupian" />

                <TextView
                    android:id="@+id/myIMG_download_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/myIMG_download_img"
                    android:paddingTop="5dp"
                    android:text="离线下载的私照" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myPostlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/post"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/sendpost" />

                <TextView
                    android:id="@+id/posttext"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/post"
                    android:paddingTop="3dp"
                    android:text="我发表的状态" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settingDetailayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/detail_img"
                    android:layout_width="28dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/detail" />

                <TextView
                    android:id="@+id/detail_txt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_img"
                    android:paddingTop="3dp"
                    android:text="设置我的资料" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/noReslayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/noRes"
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shengming" />

                <TextView
                    android:id="@+id/noRestxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/noRes"
                    android:paddingTop="1dp"
                    android:text="用户协议" />


                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/registerLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:background="#fff">

                <ImageView
                    android:id="@+id/register_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/register" />

                <TextView
                    android:id="@+id/registertxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/register_img"
                    android:layout_toRightOf="@+id/register_img"
                    android:paddingTop="3dp"
                    android:text="立即去注册" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/loginLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:background="#fff">

                <ImageView
                    android:id="@+id/loginImg"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@drawable/login"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:id="@+id/loginTxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/loginImg"
                    android:layout_toRightOf="@+id/loginImg"
                    android:paddingTop="3dp"
                    android:text="立即去登录" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/logout" />

                <TextView
                    android:id="@+id/settingtxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/setting"
                    android:layout_toRightOf="@+id/setting"
                    android:paddingTop="3dp"
                    android:text="退出登录" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_main_more" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>