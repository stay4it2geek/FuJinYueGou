<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/tabline">

        <ImageView
            android:id="@+id/userAvtar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/man"
            android:src="@drawable/layerlist_circle_mask_personnal" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/userAvtar"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/userAvtar"
            android:layout_toRightOf="@+id/userAvtar"
            android:text="昵称"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/sexAndAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/userAvtar"
            android:layout_alignStart="@+id/nickName"
            android:text="年龄/性别"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <Button
            android:id="@+id/isLogin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_common_selector"
            android:text="去登录"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vip_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sexAndAge"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/sexAndAge"
            android:layout_below="@+id/isLogin"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="您趣币不足"
            android:textSize="16sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/vip_policy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:background="#fff">

                <ImageView
                    android:id="@+id/vipimage"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/supervip" />

                <TextView
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/vipimage"
                    android:paddingTop="5dp"
                    android:text="趣会员特权" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/get_vip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/orderstatus"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/getvip" />

                <TextView
                    android:id="@+id/orderstext"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/orderstatus"
                    android:paddingTop="5dp"
                    android:text="获取趣会员特权" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vip_order_listlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/orderslist_img"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/orderlist" />

                <TextView
                    android:id="@+id/orderstatustext"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/orderslist_img"
                    android:paddingTop="5dp"
                    android:text="我的趣币充值订单" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/who_see_me"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/whoseeimage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ganxingqu" />

                <TextView
                    android:id="@+id/whoseenum"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/whoseeimage"
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:text="谁对我感兴趣" />

                <com.act.quzhibo.view.HorizontialListView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/whoseenum" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfocus_shower"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/focusimg"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/zhuboguanzhu" />

                <TextView
                    android:id="@+id/focusshower"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/focusimg"
                    android:paddingTop="3dp"
                    android:text="我关注的主播" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfocus_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/focus_person_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/qingqu" />

                <TextView
                    android:id="@+id/focus_person_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/focus_person_img"
                    android:paddingTop="3dp"
                    android:text="我关注的情趣达人" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myVideo_download_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/myVideo_download_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/downvideo" />

                <TextView
                    android:id="@+id/myVideo_download_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/myVideo_download_img"
                    android:paddingTop="5dp"
                    android:text="我下载的趣味视频" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myIMG_download_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/myIMG_download_img"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/tupian" />

                <TextView
                    android:id="@+id/myIMG_download_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/myIMG_download_img"
                    android:paddingTop="5dp"
                    android:text="我下载的高清私照" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myPostlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/post"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/sendpost" />

                <TextView
                    android:id="@+id/posttext"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/post"
                    android:paddingTop="3dp"
                    android:text="我发表的状态" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settingDetailayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/detail_img"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/detail" />

                <TextView
                    android:id="@+id/detail_txt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_img"
                    android:paddingTop="3dp"
                    android:text="设置我的资料" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/noReslayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/noRes"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shengming" />

                <TextView
                    android:id="@+id/noRestxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/noRes"
                    android:paddingTop="1dp"
                    android:text="用户协议" />


                <View
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/registerLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/register_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/phone" />

                <TextView
                    android:id="@+id/registertxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/register_img"
                    android:layout_toRightOf="@+id/register_img"
                    android:paddingTop="3dp"
                    android:text="立即去注册" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commonViewHeight"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/logout" />

                <TextView
                    android:id="@+id/settingtxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/setting"
                    android:layout_toRightOf="@+id/setting"
                    android:paddingTop="3dp"
                    android:text="退出登录" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/tabline"
        android:onClick="onLogin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/usetImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/man"
            android:src="@drawable/layerlist_circle_mask_personnal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usetImg"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="点击头像登录"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>