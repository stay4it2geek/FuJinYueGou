<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/tabline">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/man"
            android:src="@drawable/layerlist_circle_mask_personnal" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sexAndAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/nickName"
            android:layout_alignStart="@+id/nickName"
            android:text="TextView"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <View
            android:layout_width="12dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/rightarr" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/nickName"
            android:layout_toRightOf="@+id/nickName"
            android:text="已登录"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/vip_buy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:background="#fff">

                <ImageView
                    android:id="@+id/vipimage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/vipimage"
                    android:text="订购者特权" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorbg" />

            <RelativeLayout
                android:id="@+id/who_see_me"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/whoseeimage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/whoseenum"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/whoseeimage"
                    android:text="谁看过我(0)" />

                <com.act.quzhibo.view.HorizontialListView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/whoseenum" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/has_buy_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/dingyue"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/dingyuenum"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dingyue"
                    android:text="已订阅订单(0)" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wait_pay_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/waitpay"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/wait_pay_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/waitpay"
                    android:text="等待付款订单(0)" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/system_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/messagenum"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/message"
                    android:text="消息通知(0)" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfocus_shower"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/focusimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/focusshower"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/focusimg"
                    android:text="我关注的主播(0)" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfocus_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/focus_person_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/focus_person_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/focus_person_img"
                    android:text="我关注的情趣达人(0)" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myVideo_history_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/myVideo_history_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/myVideo_history_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/myVideo_history_img"
                    android:text="我观看的视频历史" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myVideo_download_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/myVideo_download_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/myVideo_download_num"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/myVideo_download_img"
                    android:text="我下载的视频" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rightarr" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/secretlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/secret"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/secrettxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/secret"
                    android:text="隐私密码" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingdanheight"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/default_head" />

                <TextView
                    android:id="@+id/settingtxt"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/setting"
                    android:layout_toRightOf="@+id/setting"
                    android:text="退出登录" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/tabline"
        android:onClick="onLogin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/usetImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/man"
            android:src="@drawable/layerlist_circle_mask_personnal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usetImg"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="点击头像登录"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>