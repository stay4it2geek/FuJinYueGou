<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:id="@+id/root_view"
    android:orientation="vertical">
    <com.act.quzhibo.view.TitleBarView
        android:visibility="gone"
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <com.jcodecraeer.xrecyclerview.XRecyclerView
           android:id="@+id/postRecyleview"
           android:layout_width="match_parent"
           android:layout_marginBottom="50dp"
           android:layout_height="match_parent" />

       <LinearLayout
           android:id="@+id/commentLayout"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_gravity="bottom"
           android:background="#eee"
           android:orientation="horizontal">

           <io.github.rockerhieu.emojicon.EmojiconEditText
               android:id="@+id/comment_et"
               style="@android:style/TextAppearance.Widget.EditText"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:gravity="center"
               android:hint="点击这里评论她/他"
               android:text=""
               android:textSize="16sp"
               emojicon:emojiconSize="20sp" />


           <TextView
               android:id="@+id/commentBtn"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:background="@drawable/button_common_selector"
               android:gravity="center"
               android:text="评论"
               android:textColor="@color/black"
               android:textSize="16sp" />
       </LinearLayout>

       <com.act.quzhibo.view.LoadNetView
           android:id="@+id/loadview"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#fff" />
   </FrameLayout>

</LinearLayout>
