<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.act.quzhibo.custom.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonViewHeight" >
    </com.act.quzhibo.custom.TitleBarView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/commonViewHeight"
        android:background="@drawable/promotion_bg"
        android:id="@+id/imageView4" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/moneyway_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="呼朋唤友来赚钱"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>


</FrameLayout>