<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.act.quzhibo.widget.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="温馨提示：支付宝收款帐号和收款人姓名必须填写正确，否则发生转账失败或转账错误时责任由申请人承担，我司不负责重新发放或者追回"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/middlegray">

                <EditText
                    android:id="@+id/payAccountET"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/edit_text"
                    android:layout_centerVertical="true"
                    android:hint="请输入支付宝收款帐号"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/darkgray"
                    android:text=""
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/lockPayAccount"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_common_selector"
                    android:gravity="center"
                    android:text="绑定"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@color/middlegray">

                <EditText
                    android:id="@+id/payAccountNameET"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/edit_text"
                    android:layout_centerVertical="true"
                    android:hint="请输入支付宝收款人姓名"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/darkgray"
                    android:text=""
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/lockPayNameAccount"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_common_selector"
                    android:gravity="center"
                    android:text="绑定"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@color/middlegray">

                <TextView
                    android:id="@+id/monthdate5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="每月中的5号"
                    android:textSize="17sp" />

                <Button
                    android:enabled="false"
                    android:id="@+id/checkoutMonthDate5"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_common_selector"
                    android:gravity="center"
                    android:text="申请提现"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@color/middlegray">

                <TextView
                    android:id="@+id/monthdate6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="每月中的6号"
                    android:textSize="17sp" />

                <Button
                    android:enabled="false"
                    android:id="@+id/checkoutMonthDate6"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_common_selector"
                    android:gravity="center"
                    android:text="申请提现"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@color/middlegray">

                <TextView
                    android:id="@+id/monthdate18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="每月中的18号"
                    android:textSize="17sp" />

                <Button
                    android:enabled="false"
                    android:id="@+id/checkoutMonthDate18"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_common_selector"
                    android:gravity="center"
                    android:text="申请提现"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@color/middlegray">

                <TextView
                    android:id="@+id/monthdate19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="每月中的19号"
                    android:textSize="17sp" />

                <Button
                    android:enabled="false"
                    android:id="@+id/checkoutMonthDate19"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_common_selector"
                    android:gravity="center"
                    android:text="申请提现"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>