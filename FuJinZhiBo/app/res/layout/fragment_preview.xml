<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <com.act.quzhibo.view.CircleImageView
            android:id="@+id/authorImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/authorNick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/authorImg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp"
            android:gravity="center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/authorImg"


            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/authorNick"
            android:layout_toRightOf="@+id/authorNick"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TextViewfdsf" />

    </RelativeLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <com.act.quzhibo.view.LoadNetView
            android:id="@+id/loadview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>