<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/background_card">


    <RelativeLayout
        android:id="@+id/near_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/photoImg"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/photoImg"
            android:layout_alignRight="@+id/photoImg"
            android:layout_below="@+id/photoImg"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nickName"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="#EA99"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/arealocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/introduce"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="#EA99"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/introduce"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="#EA99"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:background="@drawable/delete" />
</FrameLayout>